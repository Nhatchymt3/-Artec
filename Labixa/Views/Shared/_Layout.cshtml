@using Labixa.ViewModels
@using Outsourcing.Data.Models
@{ 
    IndexViewModel indexViewModel = ViewBag.indexViewModel;
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!--Meta Title-->
    @foreach (var item in indexViewModel.websiteAttributes)
    {
        if (item.Description == "title")
        {
            <title>@item.Value</title>
        }
    }

    @foreach (var item in indexViewModel.websiteAttributes)
    {
        if (item.Description == "description")
        {
            <meta name="description" content="@item.Value">
        }
    }

    @foreach (var item in indexViewModel.websiteAttributes)
    {
        if (item.Description == "keyword")
        {
            <meta name="keywords" content="@item.Value">
        }
    }

    <!-- meta facebook -->
    @foreach (var item in indexViewModel.websiteAttributes)
    {
        if (item.Description == "title")
        {
            <meta name="og:title" content="@item.Value">
        }
    }

    <meta name="og:type" content="website">
    <meta name="og:site_name" content="PetPro">
    <meta name="og:locale" content="vi_VN">
    <meta name="og:url" content="">

    @foreach (var item in indexViewModel.websiteAttributes)
    {
        if (item.Description == "image")
        {
            <meta name="og:image" content="@item.Value">
        }
    }

    <!--Meta Title-->
    @foreach (var item in indexViewModel.websiteAttributes)
    {
        if (item.Description == "description")
        {
            <meta name="og:description" content="@item.Value">
        }
    }

    <!-- meta twitter -->
    @foreach (var item in indexViewModel.websiteAttributes)
    {
        if (item.Description == "title")
        {
            <meta name="twitter:title" content="@item.Value">
        }
    }

    @foreach (var item in indexViewModel.websiteAttributes)
    {
        if (item.Description == "description")
        {
            <meta name="twitter:description" content="@item.Value">
        }
    }

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:domain" content="">

    @foreach (var item in indexViewModel.websiteAttributes)
    {
        if (item.Description == "image")
        {
            <meta name="twitter:image" content="@item.Value">
        }
    }

    <!-- add to home screen name -->
    <meta name="apple-mobile-web-app-title" data-hid="apple-mobile-web-app-title" content="">
    <meta name="application-name" data-hid="application-name" content="">


    <link rel="preconnect" href="https://fonts.gstatic.com/">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@400;500;600;700;800;900&amp;display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Krub:wght@400;500;600;700&amp;display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    @Styles.Render("~/Styles/tai-lieu")

</head>
<body>
    <div id="preloader"></div>

    <button class="scroll-top scroll-to-target" data-target="html">
        <i class="scrollup-icon">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 11l7-7 7 7M5 19l7-7 7 7"></path>
            </svg>
        </i>
    </button>
    @Html.Partial("_MenuHeader")
    @*@Html.Partial("_MenuBanner")*@
    @RenderBody()
    @Html.Partial("_MenuFooter")
    <script data-cfasync="false" src="../../../cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/Content/tailieu/js/pdf.js"></script>
    <script src="~/Content/tailieu/js/pdf.worker.js"></script>
    @Scripts.Render("~/Scripts/tai-lieu")
</body>
</html>
